cd backend
python -m venv venv
source venv/bin/activate      # macOS/Linux
venv\Scripts\activate         # Windows

pip install -r requirements.txt
python manage.py migrate
python manage.py runserver
cd ../frontend
npm install
npm start
const BASE_URL = "http://127.0.0.1:8000/api/";
